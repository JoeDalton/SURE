$RADIATION
  coupled_radiation           = no
  cool_surr_temperature       = 298.0d0
  radiating_species_name      = O2
  fit_type                    = invpower
  Planck_absorption_coeffs    = 0d0 0d0 0d0 0d0 0d0 0d0
$end_RADIATION    
 

$FICTIVE-SPECIES
  fictive_species.activate = yes
  fictive_species.name = Z
  fictive_species.name = Yc
  fictive_species.name = zv
  fictive_species.Schmidt = 0.7d0 0.7d0 0.7d0
$end_FICTIVE-SPECIES


